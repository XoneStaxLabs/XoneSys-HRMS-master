@model IEnumerable<XoneHR.Models.TblGrade>
@{
    ViewBag.Title = "List";
    Layout = null;    
    string status = "";
    Int32 i = 0;
    var Functionlist = XoneHR.Models.SessionManage.Current.PermitFunctions;
}

<script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/plugins/datatables/dataTables.bootstrap.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#example2").DataTable();
    });
</script>

<table id="example2" class="table table-bordered table-hover masterlist">
    <thead>
        <tr>
            <th width="80px">Sl No.</th>
            <th>Grade</th>
            <th data-sortable="false">Department</th>
            <th data-sortable="false">Designation</th>
            @*<th data-sortable="false">Status</th>*@
            <th data-sortable="false">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>                
                <td>@item.Gradename </td>
                <td>@item.DepName</td>
                <td>@item.DesigName</td>
                @*@if (item.GradeStatus.ToString() == "True")
                {
                    status = "Active";
                }
                else
                {
                    status = "InActive";
                }
                <td>@status</td>*@
                <td>
                    @if (Functionlist.Where(m => m.FunTypeID == XoneHR.Models.FunctionTypes.Edit).Select(m => m.UserPermiStatus).SingleOrDefault())
                    {
                        <a href="" class="btn btn-success btnedit" data-toggle="modal" data-id="@item.GradeID" data-depid="@item.DepID" data-desigid="@item.DesigID" data-name="@item.Gradename" data-status="@item.GradeStatus" ><i class="fa fa-fw fa-edit"></i></a>
                    }
                    @if (Functionlist.Where(m => m.FunTypeID == XoneHR.Models.FunctionTypes.Delete).Select(m => m.UserPermiStatus).SingleOrDefault())
                    {
                        <a href="" class="btn btn-danger btndelete" data-toggle="modal" data-id="@item.GradeID" data-name="@item.Gradename"><i class="fa fa-fw fa-trash-o"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
