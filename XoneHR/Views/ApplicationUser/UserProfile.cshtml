@model XoneHR.Models.UserProfileDetails
@{
    ViewBag.Title = "Candidateprofile";
    long HidPrjctID = 0;
    string Sub = "";
}


<script src="~/plugins/Toast/src/jquery.toast.js"></script>
<link href="~/plugins/Toast/src/jquery.toast.css" rel="stylesheet" />
 
<section class="content-header">
    <h1>
        <i class="fa fa fa-user"></i>&nbsp;
        User Profile
    </h1>


    <ol class="breadcrumb">
        <li><a href="/ApplicationUser/Index"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Back &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
    </ol>

</section>


<section class="newforms p-t-0">

    <div class="tabsnew">
        <!-- Nav tabs -->
        <div class="box box-primary">
            <div class="row p-t-20">
                <div class="col-sm-3">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="@Model.AppUserObj.AppPhoto" alt="User profile picture">

                        <h3 class="profile-username text-center">@Model.AppUserObj.AppFirstName</h3>
                        <p class="text-muted text-center">@Model.AppUserObj.DesigName</p>
                        <ul class="list-group list-tab">
                            <li role="presentation" class="list-group-item">
                                <a href="#profile" role="tab" data-toggle="tab" class="btn btn-primary btn-block">Personal Details</a>
                            </li>
                            <li role="presentation" class="list-group-item">
                                <a href="#LeaveDetails" role="tab" data-toggle="tab">Leave Details </a>
                            </li>
                            <li role="presentation" class="list-group-item">
                                <a href="#Payslip" role="tab" data-toggle="tab">Payslip</a>
                            </li>                             
                            <li role="presentation" class="list-group-item">
                                <a href="#WorkSchedule" role="tab" data-toggle="tab">Work Schedule</a>
                            </li>
                            <li role="presentation" class="list-group-item">
                                <a href="#Memos" role="tab" data-toggle="tab">Memos</a>
                            </li>                             
                        </ul>                         
                    </div>
                </div>
                <div class="col-sm-9">
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade" id="LeaveDetails">
                            <h3>Leave Details</h3>
                            <hr class="divider" />
                            <table class="table table-bordered table-hover" action="whatever">
                                <thead>
                                    <tr>
                                        <th>Leave Type</th>
                                        <th>Leave Days</th>
                                        <th>Day Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.UserLeaveObj)
                                    {
                                        <tr>
                                           
                                            <td> 
                                                <span class="control-label">@item.LeaveType</span>
                                            </td>                                             

                                            <td>
                                                <span class="control-label">@item.LeavesText</span>
                                            </td>
                                            <td>
                                                <span class="control-label">@item.DayType</span>
                                            </td>                                          
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="Payslip">
                            <h3>Payslip</h3>
                            <hr class="divider" />                             
                        </div>

                        <div role="tabpanel" class="tab-pane active" id="profile">
                            <h4>Personal Details</h4>
                            <hr class="divider" />
                            <div class="row">
                                <div class="col-md-6">
                                    <form>
                                        <div class="form-group">
                                            <label class="col-sm-4 padding-0 control-label">Name</label>
                                            <div class="col-sm-8">
                                                <span>@Model.AppUserObj.AppFirstName</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label for="" class="col-sm-4 padding-0 control-label">Nationality</label>
                                            <div class="col-sm-8">
                                                <span>@Model.AppUserObj.Citizen</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-4 padding-0 control-label">Designation</label>
                                            <div class="col-sm-8">
                                                <span>@Model.AppUserObj.DesigName</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-4 padding-0 control-label">Address</label>
                                            <div class="col-sm-8">
                                                <p>
                                                    @Model.AppUserObj.AppAddress
                                                </p>
                                            </div>
                                        </div> 

                                    </form>
                                </div>
                                <div class="col-md-6">
                                    <form>
                                        <div class="form-group">
                                            <label class="col-sm-4 padding-0 control-label">Mobile</label>
                                            <div class="col-sm-8">
                                                <span>@Model.AppUserObj.AppMobile</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-4 padding-0 control-label">Email</label>
                                            <div class="col-sm-8">
                                                <span>@Model.AppUserObj.AppEmail</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-4 padding-0 control-label">Gender</label>
                                            <div class="col-sm-8">
                                                <span>@Model.AppUserObj.AppGender</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-4 padding-0 control-label">Username</label>
                                            <div class="col-sm-8">
                                                <span>@Model.AppUserObj.AppUserName</span>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>                                               

                        <div role="tabpanel" class="tab-pane fade" id="WorkSchedule">

                            <h3>Work Schedule</h3>
                            <hr class="divider" />
                            <div class="row">
                                <div class="col-md-12">
                                    <form>
                                        <table class="table table-bordered table-hover" action="whatever">
                                            <thead>
                                                <tr>
                                                    <th>Project</th>
                                                    <th>Schedule</th>
                                                    <th>Shift</th>
                                                    <th>Shift Time</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.UserWorkschObj)
                                                {
                                                    <tr>
                                                        @if (item.ProjID != HidPrjctID)
                                                        {
                                                            <td>
                                                               @{HidPrjctID = item.ProjID ;}
                                                                <span class="control-label">@item.ProjName</span>
                                                            </td>
                                                        }else{
                                                            <td>
                                                                <span class="control-label"></span>
                                                            </td>
                                                        }
                                                       
                                                        <td>
                                                            <span class="control-label">@item.Schedule</span>
                                                        </td>
                                                        <td>
                                                            <span class="control-label">@item.ShiftName</span>
                                                        </td>
                                                        <td>
                                                            <span class="control-label" >@item.ShiftFrom - @item.ShiftTo</span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </form>
                                </div>
                            </div>

                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="Memos">
                            <h4>Memos</h4>
                            <hr class="divider" />
                            <div class="row">
                                <div class="col-md-12">
                                    <form>  
                                        <table class="table table-bordered table-hover" action="whatever">
                                            <thead>
                                                <tr>
                                                    <th>Subject</th>
                                                    <th>Text</th> 
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var item in Model.MemmouserObj)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (item.MemoSubject != Sub)
                                                        {
                                                            {Sub = item.MemoSubject;}
                                                            <span class="control-label">@item.MemoSubject</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="control-label"></span>
                                                        }
                                                        
                                                    </td>
                                                    <td>
                                                        <span class="control-label">@item.MemoText</span> 
                                                    </td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>                               
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- Tab panes -->
    </div>
</section>
 