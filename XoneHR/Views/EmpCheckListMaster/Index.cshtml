@{
    ViewBag.Title = "Index";
    var Functionlist = XoneHR.Models.SessionManage.Current.PermitFunctions;
}
<script src="~/plugins/Toast/src/jquery.toast.js"></script>
<link href="~/plugins/Toast/src/jquery.toast.css" rel="stylesheet" />
<script type="text/javascript">

    $(document).ready(function () {

        List();//List Data

        $(".addnew").click(function () {

            $.ajax({
                url: "/EmpCheckListMaster/AddNew"
            }).done(function (data) {
                $("#AddnewModal").html(data);

            });
            $("#AddnewModal").modal("show");
        });
        $(document).on("click", ".btnedit", function () {
            
            $("label[for='EditCheckListDetails']").text('');
            $("label[for='EditPrice']").text('');

            $("#CheckListTypeID").val($(this).attr("data-id"));
            $("#EditCheckListDetails").val($(this).attr("data-name"));
            $("#EditPrice").val($(this).attr("data-price"))
            
            $("#EditModal").modal("show");
        });
        $(document).on("click", ".btndelete", function () {

            $("#HIdCheckListTypeID").val($(this).attr("data-id"));
            $("#CheckListDetailsDelete").text($(this).attr("data-name"));
            $("#DeleteModal").modal("show");
        });

        $("#editsave").click(function () {

            $('#EditFrom').validate();         

            if ($('#EditFrom').valid()) {
               
                $.ajax({
                    type:"POST",
                    url: "/EmpCheckListMaster/Edit",
                    data: $('#EditFrom').serialize()

                }).done(function (data) {
                    if (data.Result > 0) {
                        List();
                        $("#EditModal").modal("hide");
                    }
                    $.toast({
                        text:data.Message,
                        position: 'top-right',
                        hideAfter: 2000,
                        showHideTransition: 'slide',
                        loader: false,

                    });
                });
            }
        });
        $("#deletesave").click(function () {

            $.ajax({
                type:"POST",
                url: "/EmpCheckListMaster/Delete",
                data: { CheckListTypeID: $("#HIdCheckListTypeID").val() }

            }).done(function (data) {
                if (data.Result > 0) {
                    $("#DeleteModal").modal("hide");
                    List();
                }
                $.toast({
                    text: data.Message,
                    position: 'top-right',
                    hideAfter: 2000,
                    showHideTransition: 'slide',
                    loader: false,
                })
            });
        });
    })

</script>

<script>
    function List() {
        $.ajax({
            url: "/EmpCheckListMaster/List"
        }).done(function (data) {
            $("#EmpChklist").html(data);
        });
    }


</script>

@* Heading Part *@
<section class="content-header">
    <h1>
        Employee Checklist Items
    </h1>
    @*@if (Functionlist.Where(m => m.FunTypeID == XoneHR.Models.FunctionTypes.Create).Select(m => m.UserPermiStatus).SingleOrDefault())
        {*@
    <ol class="breadcrumb">
        @*Add New buttonazd*@
        <li><a href="#a" class="addnew" data-toggle="modal"><i class="fa fa-plus"></i> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
    </ol>
    @*}*@

</section>
<section class="newforms">  

    <div id="EmpChklist"></div>

    <!-- Modal Add New -->
    <div class="modal fade" id="AddnewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    </div>

    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modify Employee Checklist Items </h4>
            </div>
            <div class="modal-content">
                <div class="modal-body">
                    <form class="projectadding form-horizontal col-sm-12" id="EditFrom" novalidate>
                        
                        <div class="form-group">
                            <label for="ChecklstDetails" class="col-sm-3 control-label">Item Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control required" autocomplete="off" id="EditCheckListDetails" name="CheckListDetails">
                                <input type="hidden" name="CheckListTypeID" id="CheckListTypeID">
                            </div>
                        </div>   
                        <div class="form-group">
                            <label for="price" class="col-sm-3 control-label">Price</label>
                            <div class="col-sm-8">
                                <input type="number" class="form-control required" autocomplete="off" id="EditPrice" name="Price">
                            </div>
                        </div>                     
                    </form>
                </div>
                <div class="modal-footer text-right">
                    <button type="button" class="btn btn-default" id="editsave">Update</button>
                    <button type="button" class="btn btn-default greybtn" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Delete -->
    <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <input type="hidden" id="HIdCheckListTypeID" />
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p class="deleteconfirm">Are you sure want to delete <span class="text-primary" id="CheckListDetailsDelete"></span>?</p>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="deletesave">OK</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</section>