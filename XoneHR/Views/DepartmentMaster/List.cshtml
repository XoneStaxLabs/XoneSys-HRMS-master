@model IEnumerable<XoneHR.Models.TblDepartment>
@{
    ViewBag.Title = "List";
    Layout = null;
    string UserType = "";
    string status = "";
    Int32 i = 0;
    var Functionlist = XoneHR.Models.SessionManage.Current.PermitFunctions;
}
<script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/plugins/datatables/dataTables.bootstrap.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#example2").DataTable();
    });
</script>

<table id="example2" class="table table-bordered table-hover masterlist">
    <thead>
        <tr>
            <th width="80px">Sl No.</th>            
            <th>Department</th> 
            <th data-sortable="false">User Type</th>            
            <th data-sortable="false">Status</th>
            <th data-sortable="false">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>               
                @if (item.DepUserTyp == 0)
                {
                    UserType = "Application";
                }
                else
                {
                    UserType = "Employee";
                }
                <td>@item.DepName</td>
                <td>@UserType</td>                
                @if (item.DepStatus.ToString() == "True")
                {
                    status = "Active";
                }
                else
                {
                    status = "InActive";
                }
                <td>@status</td>                
                <td>
                @*@if (Functionlist.Where(m => m.FunTypeID == XoneHR.Models.FunctionTypes.Edit).Select(m => m.UserPermiStatus).SingleOrDefault())
                {*@
                    <a href="" class="btn btn-success btnedit" data-toggle="modal" data-id="@item.DepID" data-name="@item.DepName" data-status="@item.DepStatus" data-usertype="@item.DepUserTyp"><i class="fa fa-fw fa-edit"></i></a>
                @*}
                @if (Functionlist.Where(m => m.FunTypeID == XoneHR.Models.FunctionTypes.Delete).Select(m => m.UserPermiStatus).SingleOrDefault())
                {*@
                    <a href="" class="btn btn-danger btndelete" data-toggle="modal" data-id="@item.DepID" data-name="@item.DepName"><i class="fa fa-fw fa-trash-o"></i></a>
                @*}*@
                </td>
            </tr>
        }
    </tbody>
</table>
