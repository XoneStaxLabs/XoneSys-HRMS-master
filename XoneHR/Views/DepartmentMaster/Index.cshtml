<script src="~/plugins/Toast/src/jquery.toast.js"></script>
<link href="~/plugins/Toast/src/jquery.toast.css" rel="stylesheet" />
<script type="text/javascript">

    $(document).ready(function () {
       
        List();//List Data

        $(".addnew").click(function () {
            
            $.ajax({
                url: "/DepartmentMaster/AddNew"
            }).done(function (data) {
                $("#AddnewModal").html(data);

            }); 
            $("#AddnewModal").modal("show");
        });
        $(document).on("click", ".btnedit", function () {
            
            $("label[for='EditDepUserTyp']").text('');

            $("#DepID").val($(this).attr("data-id"));
            $("#EditDepName").val($(this).attr("data-name"));
            $("#EditDepUserTyp").val($(this).attr('data-usertype'));
            if ($(this).attr("data-status") == "True") {

                $('#active').iCheck('check')
            }
            else {
                $('#inactive').iCheck('check')
            }
            $("#EditModal").modal("show");
        });
        $(document).on("click", ".btndelete", function () {

            $("#HIdDepID").val($(this).attr("data-id"));
            $("#DepNameDelete").text($(this).attr("data-name"));
            $("#DeleteModal").modal("show");
        });

        $("#editsave").click(function () {
            
            $('#EditFrom').validate({
                rules: {
                    DepUserTyp: {
                        required: true,
                        check_item_dropdown1: true
                    }
                }
            });

            $.validator.addMethod("check_item_dropdown1", function (value, element) {
                return this.optional(element) || value != -1;
            }, "Please select an item from the dropdown list.");
             
            if ($('#EditFrom').valid()) {

                var status = 0;
                if ($('#active').is(':checked')) {
                    status = 1;
                } else {
                    status = 0;
                }
                $.ajax({
                    type:"POST",
                    url: "/DepartmentMaster/Edit",
                    data: $('#EditFrom').serialize()

                }).done(function (data) {
                    if (data.Result > 0) {
                        List();
                        $("#EditModal").modal("hide");
                    }
                    $.toast({
                        text:data.Message,
                        position: 'top-right',
                        hideAfter: 2000,
                        showHideTransition: 'slide',
                        loader: false,

                    });                   
                });
            }
        });
        $("#deletesave").click(function () {

            $.ajax({
                type:"POST",
                url: "/DepartmentMaster/Delete",
                data: { DepID: $("#HIdDepID").val() }

            }).done(function (data) {
                if (data.Result > 0) {
                    $("#DeleteModal").modal("hide");
                    List();
                }
                $.toast({
                    text: data.Message,
                    position: 'top-right',
                    hideAfter: 2000,
                    showHideTransition: 'slide',
                    loader: false,
                })                             
            });
        });
    })

</script>

<script>
    function List() {
        $.ajax({
            url: "/DepartmentMaster/List"
