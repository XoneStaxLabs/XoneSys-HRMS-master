 @model IEnumerable<XoneHR.Models.TblSkillSets>
@{
    ViewBag.Title = "List";
    Layout = null;
    string status = "";
    var i = 0;
    var Functionlist = XoneHR.Models.SessionManage.Current.PermitFunctions;
}
<script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/plugins/datatables/dataTables.bootstrap.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#example2").DataTable();
    });
</script>

<table id="example2" class="table table-bordered table-hover masterlist">
    <thead>
        <tr>
            <th style="width:110px !important">Serial Number</th>
            <th width="50%">Name</th>
            @*<th data-sortable="false">Description</th>*@
            <th data-sortable="false">Status</th>
            <th data-sortable="false">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@item.SkilsetName</td>
                @*<td>@item.Description</td>*@
                @if (item.SkilStatus.ToString() == "True")
                {
                    status = "Active";

                }
                else
                {
                    status = "InActive";

                }
                <td>@status</td>
                <td>
                    @*<a href="" class="btn btn btn-primary" data-toggle="modal" data-target="#myModal2"><i class="fa fa-fw fa-eye"></i></a>*@
                    @if (Functionlist.Where(m => m.FunTypeID == XoneHR.Models.FunctionTypes.Edit).Select(m => m.UserPermiStatus).SingleOrDefault())
                    {
                        <a href="" class="btn btn-success btnedit" data-toggle="modal" @*data-target="#myModal1"*@ data-id="@item.SkilID" data-name="@item.SkilsetName" data-description="@item.Description" data-status="@item.SkilStatus"><i class="fa fa-fw fa-edit"></i></a>
                    }
                    @if (Functionlist.Where(m => m.FunTypeID == XoneHR.Models.FunctionTypes.Delete).Select(m => m.UserPermiStatus).SingleOrDefault())
                    {
                        <a href="" class="btn btn-danger btndelete" data-toggle="modal" @*data-target="#myModal"*@ data-id="@item.SkilID"><i class="fa fa-fw fa-trash-o"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
