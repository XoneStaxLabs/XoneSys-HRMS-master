@{
    ViewBag.Title = "Index";
    var Functionlist = XoneHR.Models.SessionManage.Current.PermitFunctions;
}

<script src="~/plugins/Toast/src/jquery.toast.js"></script>
<link href="~/plugins/Toast/src/jquery.toast.css" rel="stylesheet" />
<script type="text/javascript">

    $(document).ready(function () {
        $('#EditFrom').validate(); //initilize validation plugin on this form.
        List();//List Data
        
        $(".addnew").click(function () {
            $.ajax({
                url: "/Race/RaceAddNew"
            }).done(function (data) {
                $("#AddnewModal").html(data);

            });
            clearTextboxes()
            $("#AddnewModal").modal("show");
        });
        $(document).on("click", ".btnedit", function () {         
            $("label[for='RaceNameEdit']").text('');
            clearTextboxes()
            $("#HidRaceID").val($(this).attr("data-id"));
            $("#RaceNameEdit").val($(this).attr("data-name"));
            if ($(this).attr("data-status") == "True") {

                $('#active').iCheck('check')
            }
            else {
                $('#inactive').iCheck('check')
            }
            $("#EditModal").modal("show");
        });
        $(document).on("click", ".btndelete", function () {

            $("#HIdDelRaceID").val($(this).attr("data-id"));
            $("#RaceNameDelete").text($(this).attr("data-name"));
            $("#DeleteModal").modal("show");
        });
        $("#editsave").click(function () {
            if ($('#EditFrom').valid()) {

                var status = 0;
                if ($('#active').is(':checked')) {
                    status = 1;
                } else {
                    status = 0;
                }
                $.ajax({
                    url: "/Race/Edit",
                    data: { RaceID: $("#HidRaceID").val(), RaceName: $("#RaceNameEdit").val(), status: status }

                }).done(function (data) {
                    if (data > 0) {
                        List();
                        $("#EditModal").modal("hide");
                        $.toast({
                            text: "Updated Successfully",
                            position: 'top-right',
                            hideAfter: 2000,
                            showHideTransition: 'slide',
                            loader: false,

                        })
                    }
                    else if (data == -1) {
                        $.toast({
                            text: "Data Already Exists",
                            position: 'top-right',
                            hideAfter: 2000,
                            showHideTransition: 'slide',
                            loader: false,

                        })

                    }
                    else {
                        $.toast({
                            text: "Updating Failed",
                            position: 'top-right',
                            hideAfter: 2000,
                            showHideTransition: 'slide',
                            loader: false,

                        })
                    }

                });
            }
        });
        $("#deletesave").click(function () {

            $.ajax({
                url: "/Race/Delete",
                data: { RaceID: $("#HIdDelRaceID").val() }

            }).done(function (data) {
                if (data > 0) {
                    $("#DeleteModal").modal("hide");
                    List();
                    $.toast({
                        text: "Deleted Successfully",
                        position: 'top-right',
                        hideAfter: 2000,
                        showHideTransition: 'slide',
                        loader: false,

                    })
                }
                else {
                    $.toast({
                        text: "Deleting Failed",
                        position: 'top-right',
                        hideAfter: 2000,
                        showHideTransition: 'slide',
                        loader: false,

                    })
                }
            });
        });
    })

</script>

<script>
    function List() {
        $.ajax({
            url: "/Race/List"
        }).done(function (data) {
            $("#Racelist").html(data);
        });
    }
    function clearTextboxes()
    {
        $("#Racename").val("");
        $("#RaceNameEdit").val("");
    }
   
</script>

@* Heading Part *@
<section class="content-header">
    <h1>
        Race
    </h1>
    @if (Functionlist.Where(m => m.FunTypeID == XoneHR.Models.FunctionTypes.Create).Select(m => m.UserPermiStatus).SingleOrDefault())
    {
    <ol class="breadcrumb">
        @*Add New buttonazd*@
        <li><a href="#a" class="addnew" data-toggle="modal"><i class="fa fa-plus"></i> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
    </ol>
    }
    
</section>
<section class="newforms">

    
    <div id="Racelist"></div>

    <!-- Modal Add New -->
    <div class="modal fade" id="AddnewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

    </div>

    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Modify Race Master</h4>
            </div>
            <div class="modal-content">
                <div class="modal-body">
                    <form class="projectadding form-horizontal col-sm-8" id="EditFrom" novalidate>
                        <div class="form-group">
                            <label for="RaceName_Edit" class="col-sm-3 control-label">Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control required" id="RaceNameEdit">
                                <input type="hidden" id="HidRaceID" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Status</label>
                            <div class="col-sm-8">
                                <label>
                                    <input type="radio" name="statusradio" class="flat-red statusradio" id="active">
                                    Active
                                </label>
                                <label>
                                    <input type="radio" name="statusradio" class="flat-red statusradio" id="inactive">
                                    Disable
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-3 control-label">&nbsp;</label>
                            <div class="col-sm-8">
                                <button type="button" class="btn btn-default" id="editsave">Save</button>
                                <button type="button" class="btn btn-default greybtn" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Delete -->
    <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <input type="hidden" id="HIdDelRaceID" />
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p class="deleteconfirm">Are you sure want to delete <span class="text-primary" id="RaceNameDelete"></span>?</p>
                    
                </div>
                <div class="modal-footer">                    
                    <button type="button" class="btn btn-primary" id="deletesave">OK</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</section>