<!-- jQuery 2.1.4 -->


<script src="~/plugins/Toast/src/jquery.toast.js"></script>
<link href="~/plugins/Toast/src/jquery.toast.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        List();

        function clearTextboxes() {
            $("#ContractInfoname").val("");
            $("#ContractInfonameEdit").val("");
            $("#ContractInfodescEdit").val("");
            $("#ContractInfoType").val(0);
            $("#ContractInfoTypeEdit").val(0);
        }
        $(".addnew").click(function () {

            $.ajax({
                url: "/ContractInfoMaster/AddNew"
            }).done(function (data) {
                $("#AddnewModal").html(data);

            });

            clearTextboxes()

            $("#AddnewModal").modal("show");
        });
        $(document).on("click", ".btnedit", function () {
            $.ajax({
                url: "/ContractInfoMaster/ContractInfoType",
                async: false
            }).done(function (data) {
               
                $("#ContractInfoTypeEdit").empty();
                $("#ContractInfoTypeEdit").append('<option value="0">--select--</option>').selectpicker('refresh');
                $.each(data, function (i, item) {

                    $("#ContractInfoTypeEdit").append('<option value=' + item.ConInfoTypID + '>' + item.ConInfoTypName + '</option>').selectpicker('refresh');;
                });

            });

            clearTextboxes()
            $("#hidContractInfoTypeID").val($(this).attr("data-id"));
            $("#ContractInfoTypeEdit").selectpicker('val', $(this).attr("data-typeid"));

            $("#ContractInfonameEdit").val($(this).attr("data-name"));
            $("#ContractInfodescEdit").val($(this).attr("data-desc"));
            if ($(this).attr("data-status") == "True") {


                $('#active').iCheck('check')
            }
            else {
                $('#inactive').iCheck('check')
            }
            $("#EditModal").modal("show");
        });

        $(document).on("click", ".btndelete", function () {

            $("#hidContractInfoTypeIDdelete").val($(this).attr("data-id"));
            $("#DeleteModal").modal("show");
        });

        $("#editsave").click(function () {
            $.validator.addMethod("check_item_dropdown", function (value, element) {
                return this.optional(element) || value != 0;
            }, "Please select an item from the dropdown list.");

            $("#Editform").validate({

                rules: {
                    ContractInfoTypeEdit: {
                        required: true,
                        check_item_dropdown: true,

                    },
                }
            })
            if ($("#Editform").valid()) {
                var status = 0;
                if ($('#active').is(':checked')) {
                    status = 1;
                } else {
                    status = 0;
                }
                $.ajax({
                    url: "/ContractInfoMaster/Edit",
                    data: { ConInfoID: $("#hidContractInfoTypeID").val(), ConInformation: $("#ContractInfonameEdit").val(), ConInfoDetails: $("#ContractInfodescEdit").val(), ConInfoTypID: $("#ContractInfoTypeEdit").val(), status: status }

                }).done(function (data) {
                    if (data == 1) {
                        List();
                        $("#EditModal").modal("hide");
                        $.toast({
                            text: "Saved Successfully",
                            position: 'top-right',
                            hideAfter: 2000,
                            showHideTransition: 'slide',
                            loader: false,

                        })
                    }
                    else if (data == 2) {
                        $.toast({
                            text: "Data Already Exists",
                            position: 'top-right',
                            hideAfter: 2000,
                            showHideTransition: 'slide',
                            loader: false,

                        })

                    }
                    else {
                        $.toast({
                            text: "Save Failed",
                            position: 'top-right',
                            hideAfter: 2000,
                            showHideTransition: 'slide',
                            loader: false,

                        })
                    }

                });
            }
        });

        $("#deletesave").click(function () {

            $.ajax({
                url: "/ContractInfoMaster/Delete",
                data: { ConInfoID: $("#hidContractInfoTypeIDdelete").val() }

            }).done(function (data) {
                if (data == 1) {
                    $("#DeleteModal").modal("hide");
                    List();
                    $.toast({
                        text: "Data Deleted Successfully",
                        position: 'top-right',
                        hideAfter: 2000,
                        showHideTransition: 'slide',
                        loader: false,

                    })
                }
                else {
                    $.toast({
                        text: "Delete Failed",
                        position: 'top-right',
                        hideAfter: 2000,
                        showHideTransition: 'slide',
                        loader: false,

                    })
                }
            });
        });



    })
</script>
