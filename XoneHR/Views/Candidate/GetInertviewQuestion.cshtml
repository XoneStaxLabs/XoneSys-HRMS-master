@model IEnumerable<XoneHR.Models.TblQuestions>
@{
    ViewBag.Title = "GetInertviewQuestion";
    Layout = null;
    var i = 0;
}

<script src="~/plugins/Toast/src/jquery.toast.js"></script>
<link href="~/plugins/Toast/src/jquery.toast.css" rel="stylesheet">
<script src="~/dist/js/star-rating.js" type="text/javascript"></script>


<script type="text/javascript">

    $(".addnew").click(function () {        
        $.ajax({
            url: "/Candidate/InterviewQnsAddNew"
        }).done(function (data) {
            $("#AddnewModal").html(data);

        });
        //clearTextboxes() 
        $("#AddnewModal").modal("show");
    });

    //$(".RemoveInterviewQus").on("click", function () {
    $(document).on("click", ".RemoveInterviewQus", function () {
        $.ajax({
            url: "/Candidate/RemoveQuestions",
            data: { QuestID: $(this).attr("data-id") },
            async: false
        }).done(function (data) {
            GetInertviewQns();
        });
    });
       

    $("#BtnAddInterviewdata").click(function () {
        
        $.ajax({

            type: "POST",
            url: "/Candidate/AddInterviewData",
            data: $("#InterViewData").serialize()

        }).done(function (data) {

            $.toast({

                text: data.Message,
                position: 'top-right',
                hideAfter: 3000,
                showHideTransition: 'slide',
                loader: false,
            })

            if (data.Result > 0 ) {
               
               // GetInertviewQns();
                GetInterViewDataList();

            } 
            




        })

    })

</script>
<form class="" action="#" id="InterViewData">
    
    <section class="content-header">
        <h1>
            Interview
        </h1>
        <ol class="breadcrumb">
            @*Add New buttonazd*@
        <li><a href="#" class="addnew" data-toggle="modal"><i class="fa fa-plus"></i> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a></li>
    </ol>
    </section>
   
    @foreach (var item in Model)
{
    i = i + 1;
    <div class="ques@(i)" >
        <div class="form-group">
            <div class="col-sm-4">
                <h6><span>@i. </span>@item.QuestName </h6>
                <input type="hidden" value="@item.QuestID" name="QuestID" id="QuestID" />
            </div>

            <div class="col-sm-8"><button type="button" class="RemoveInterviewQus" data-id="@item.QuestID" data-item="@i"><i class="fa fa-trash"></i></button></div>

        </div>
        <div class="form-group">
            <label class="col-sm-12" for="exampleInputPassword1">Answer</label>
            <div class="col-sm-6">
                <textarea class="form-control" name="Answer" rows="3"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-12" for="exampleInputPassword1">Rating</label>
            <div class="col-sm-4">
                <input id="input-21e" value="0" type="number" name="AnsRating" class="rating" min=0 max=5 step=0.5 data-size="xs">
            </div>
        </div>
    </div>
}
    <hr class="divider">

    <div class="text-right">
        <button type="button" class="btn btn-sm btn-success" id="BtnAddInterviewdata">Save &nbsp;<i class="fa fa-floppy-o"></i></button>
    </div>
</form>

