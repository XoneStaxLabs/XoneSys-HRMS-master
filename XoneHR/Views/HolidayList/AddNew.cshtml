@{
    ViewBag.Title = "AddNew";
    Layout = null;
}
<script src="~/plugins/Toast/src/jquery.toast.js"></script>
<link href="~/plugins/Toast/src/jquery.toast.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {

        $('.daterangepicker-single').daterangepicker({
            "singleDatePicker": true,
            format: 'DD/MM/YYYY'
        });

        $('#addnewform').validate(); //initilize validation plugin on this form.

        $("#createsave").click(function () {

            if ($('#addnewform').valid()) {

                $.ajax({
                    url: "/HolidayList/Create",
                    data: { HoliText: $("#HoliText").val(),HoliDate:$("#HoliDate").val() },
                    type:"POST"

                }).done(function (data) {

                    if (data > 0) {
                        $("#AddnewModal").modal("hide");
                        HolidayListing();
                        $.toast({
                            text: "Saved Successfully",
                            position: 'top-right',
                            hideAfter: 2000,
                            showHideTransition: 'slide',
                            loader: false,
                        })
                    }
                    else {
                        $.toast({
                            text: "Save Failed",
                            position: 'top-right',
                            hideAfter: 2000,
                            showHideTransition: 'slide',
                            loader: false,
                        })
                    }
                });
            }
        });
    });
</script>

<div class="modal-dialog" role="document">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add Holidays</h4>
    </div>
    <div class="modal-content">
        <div class="modal-body">
            <form class="projectadding form-horizontal col-sm-8" id="addnewform" novalidate>
                <div class="form-group">
                    <label for="HoliText" class="col-sm-3 control-label">Day</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control required " id="HoliText" name="HoliText" autocomplete="off">
                    </div>
                    <label for="HoliDate" class="col-sm-3 control-label">Date</label>
                    <div class='col-sm-8'>
                        <input type='text' class="form-control daterangepicker-single required" name="HoliDate" id="HoliDate" placeholder="Date" />
                        @*<span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>*@
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer text-right">
            <button type="button" class="btn btn-default" id="createsave">Save</button>
            <button type="button" class="btn btn-default greybtn" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>